{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "jsx": "react",
    "sourceMap": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "styles": ["src/styles"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es6", "es2018", "esnext", "dom", "dom.iterable"],
    "noEmit": true,
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules/*",
    "build",
    "configs"
  ]
}
